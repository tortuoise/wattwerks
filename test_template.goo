package main

import (
	"html/template"
	"log"
	"os"
)

func main() {
	const tpl = `
	<!DOCTYPE html>
	<html>
		<head>
			<meta charset="UTF-8">
			<title>{{.Title}}</title>
		</head>
		<body>
			{{range .Items}}<div>{{ . }}</div>{{else}}<div><strong>no rows</strong></div>{{end}}
		</body>
	</html>`

	const tpl1 = `
	<!DOCTYPE html>
	<html>
		<head>
			<meta charset="UTF-8">
			<title>Wattwerks</title>
		</head>
		<body>
			{{ . }}
		</body>
	</html>`

	const tpl2 = `<div> Boo yeah </div>`

	check := func(err error) {
		if err != nil {
			log.Fatal(err)
		}
	}
	t, err := template.New("webpage").Parse(tpl)

	data := struct {
		Title string
		Items []string
	}{
		Title: "My page",
		Items: []string{
			"My photos",
			"My blog",
		},
	}

	err = t.Execute(os.Stdout, data)
	check(err)

	noItems := struct {
		Title string
		Items []string
	}{
		Title: "My another page",
		Items: []string{},
	}

	err = t.Execute(os.Stdout, noItems)
	check(err)

	html1,_ := template.New("common").Parse(tpl1)
	html2,_ := template.New("products").Parse(tpl2)
	err = html1.ExecuteTemplate(os.Stdout,"common",  html2) 
	check(err)
}
